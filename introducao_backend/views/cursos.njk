{% extends "layouts.njk" %}

{% block head %}
    <title>Cursos</title>
    <link rel="stylesheet" href="/style-sobre.css">
    <link rel="stylesheet" href="/style.css">
{% endblock %}

{% block content %}      
        <main>

            <div class="titulo">
            <h1>Cursos</h1>
        </div>

           <section class="contents">
               {% for content in contents %}
               <div class="content" id="{{ content.id }}">    
                    <div class="content-card-logo">
                        <img src="{{ content.img_course }}" alt="Imagem do curso {{ content.title }}">
                    </div>
                    <div class="card-content">
                       <p  class="content-card-price">{{ content.title }}</p> 
                       <p>R$ {{ content.price }}</p>
                       <p>Autor: {{ content.autor}} <p>
                    </div>
                    <div class="content-card-info">
                       <p>Duração: {{ content.read_time }}</p>
                    </div>
               </div>
               {% endfor %}
            </section>

            <div class="container">
                <img src="{{ text.logo }}">
                <div class="text-rocket">
                    <p>{{text.texto}}</p>
                </div>
            </div>
           
            <div class="tecnologias">
            
                <h2>{{ tec.title }}</h2>
                <ul>
                    {% for language in tec.languages %}
                        <li>{{language.lang}}</li>
                    {% endfor%}
                    
                </ul>
            </div>
        
            <div class="rocket-redes">
                <h2>Redes sociais</h2>
                <ul>
                    <li>
                        <a href="https://github.com/jcblank" target="blank"><img src="img/Octocat.png"></a>
                    </li>
                    <li>
                        <a href="https://www.linkedin.com/in/jcarbr/" target="blank"><img src="img/linkedin.png"></a>
                    </li>
                    <li>
                        <a href="https://www.facebook.com/jcarlos.blank" target="blank"><img src="img/face.png"></a>
                    </li>
                </ul>
            </div>
        </main>
       {% endblock %}